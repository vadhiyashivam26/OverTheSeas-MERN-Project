<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-lg-8 col-md-10 col-sm-12 mx-auto px-3">
      <h3>Create a New Listing</h3>
      <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
          <label for="title" class="form-label"><b>Title</b></label>
          <input
            id="title"
            placeholder="Enter a title"
            type="text"
            name="listing[title]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please give a Title</div>
        </div>

        <div class="mb-2">
          <label for="description" class="form-label"><b>Description</b></label>
          <textarea
            id="description"
            placeholder="Enter Something About Listing"
            name="listing[description]"
            type="text"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please give a short Description</div>
        </div>

        <div class="mb-2">
          <label for="image" class="form-label"><b>Upload Listing Images</b></label>
          <input
            type="file"
            id="image"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>

        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label"><b>Price</b></label>
            <input
              placeholder="Enter Price"
              id="price"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please give a Price</div>
          </div>

          <div class="mb-2 col-md-8">
            <label for="Country" class="form-label"><b>Country</b></label>
            <input
              type="text"
              placeholder="Enter Country"
              id="Country"
              name="listing[country]"
              class="form-control"
              required
            />
          </div>
          <div class="invalid-feedback">Please give a Country name</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label"><b>Location</b></label>
          <input
          placeholder="Enter Location"
            type="text"
            id="location"
            name="listing[location]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please give a Location</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add Listing</button>
        <br><br>
      </form>
    </div>
  </div>
</body>

<script src="/js/script.js"></script>
